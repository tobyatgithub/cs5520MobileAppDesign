<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/E"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginTop="124dp"
        android:text="E"
        android:onClick="ClickyClickE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnF"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="48dp"
        android:text="F"
        android:onClick="ClickyClickF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnD"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="124dp"
        android:text="D"
        android:onClick="ClickyClickD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnC"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:text="C"
        android:onClick="ClickyClickC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnB"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:text="B"
        android:onClick="ClickyClickB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnA"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:text="A"
        android:onClick="ClickyClickA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ClickyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No button pressed yet"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>